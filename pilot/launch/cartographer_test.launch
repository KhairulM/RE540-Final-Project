<?xml version="1.0"?>
<launch>

<!-- Cartographer node -->
  <node name="cartographer_node"
        pkg="cartographer_ros"
        type="cartographer_node"
        output="screen"
        args="-configuration_directory $(find cartographer_ros)/configuration_files
              -configuration_basename realsense_robot.lua">
      <remap from="points2" to="/camera/depth_registered/points"/>
  </node>

<!-- Occupancy grid node (publishes /map) -->
  <node name="cartographer_occupancy_grid_node"
        pkg="cartographer_ros"
        type="cartographer_occupancy_grid_node"
        args="-resolution 0.05"
        output="screen" />

<!-- Optional: open RViz -->
  <node pkg="rviz" type="rviz" name="rviz"
        args="-d $(find my_nav_pkg)/rviz/test.rviz" required="true"/>

</launch>
